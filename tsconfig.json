{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@root-notes/common": ["../common/@root-notes/common/src"],
      "@root-notes/root-doc": ["../root-doc/root-doc/src"]
    }
  },
  "include": ["src", "electron", "../common/@root-notes/common/src", "../root-doc/root-doc/src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
